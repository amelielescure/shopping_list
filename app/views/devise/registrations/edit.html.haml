%h2
  = t(:edit, scope: [:devise, :registrations, :edit])
  = resource_name.to_s.humanize
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => "form-horizontal" }) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .form-group
    = f.label :password
    %i (leave blank if you don't want to change it)
    %br/
    = f.password_field :password, autocomplete: "off"
  .form-group
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .form-group
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password, autocomplete: "off"
  %div= f.submit t(:sign_up, scope: [:devise, :common])
%h3= t(:cancel_my_account, scope: [:devise, :registrations, :edit])
%p
  = t(:unhappy, scope: [:devise, :registrations, :edit])
  = button_to t(:cancel_my_account, scope: [:devise, :registrations, :edit]), registration_path(resource_name), data: { confirm: t(:are_you_sure, scope: [:devise, :registrations, :edit]) }, method: :delete
= link_to t(:back, scope: [:devise, :registrations, :edit]), :back